# Latent Underground - Environment Configuration
# Copy to .env and customize as needed. All values shown are defaults.

# Server binding
LU_HOST=127.0.0.1
LU_PORT=8000

# Database path (relative to backend/ or absolute)
LU_DB_PATH=latent.db

# Log level (debug, info, warning, error)
LU_LOG_LEVEL=info

# CORS origins (comma-separated)
LU_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8000,http://127.0.0.1:8000

# Frontend dist directory (relative to project root or absolute)
# LU_FRONTEND_DIST=../frontend/dist

# API key for authentication (empty or unset = auth disabled)
# LU_API_KEY=your-secret-key-here

# Rate limiting: requests per minute per client per endpoint (0 = disabled)
# Write RPM applies to POST/PUT/PATCH/DELETE, Read RPM applies to GET
LU_RATE_LIMIT_RPM=30
LU_RATE_LIMIT_READ_RPM=120

# Log format: "text" for human-readable, "json" for JSON lines
LU_LOG_FORMAT=text

# Log retention: auto-delete project log files older than N days (0 = disabled)
LU_LOG_RETENTION_DAYS=0

# Automatic database backups: interval in hours (0 = disabled), max backups to keep
LU_BACKUP_INTERVAL_HOURS=0
LU_BACKUP_KEEP=5

# LU_REQUEST_LOG=true        # Log all HTTP requests (method, path, status, duration)
